---
interface Props {
  title?: string;
}

const { title = 'Tokyo 2026 Trip' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Our family trip to Tokyo in January 2026" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Tokyo2026/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Tokyo 2026</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
